<%- include('_header'); %>
<section id = "Home">
    <div class="row column1">
      <div class="col-lg-6 col-md-6 first-image">
          <img class = "boyimage" src="/img/20200630_162659.gif" alt="">
      </div>
        <div class="col-lg-6 section-1">
            <h1 class = "Hello">Hello All ! I'm <%= name %> <span class="wave">ðŸ‘‹</span></h1>
            <p><%= description %></p>
                <div class=social_media_icon>
                  <a class="btn" href="<%= instagram %>" target=_blank>
                    <i class="fab fa-instagram"></i>
                  </a>
                  <a class="btn" href="<%= linkedin %>" target=_blank>
                    <i class="fab fa-linkedin" aria-hidden="true"></i>
                  </a>
                  <a class="btn" href="<%= github %>" target=_blank>
                    <i class="fab fa-github"></i>
                  </a>
                  <a class="btn" href="mailto:<%= mail %>" target=_blank>
                    <i class="fab fa-google"></i>
                  </a>
                </div>
        </div>
        <div class="Image-boy col-lg-6"><img class="boy" src="/img/Boy-image.png" alt=""></div>
    </div>
</section>


<section id=Whatido>
    <h1>What I Do ?</h1>
     

    <% for(let i=0;i<whatido.length;i++){ var direc; %>
      <% if(i%2 == 0) { %>
       <% direc='row';%>
      <% } else { %>
       <% direc='row-reverse';%>
      <% }%>

      
      <div class="<%= direc %> feature-2">
        <div class="col-lg-6 col-md-6">
          <h1 class="Feature-Heading"><%= whatido[i].heading %></h1>
          <ul class = "dev-icon">
            <% for(let j=0;j<whatido[i].icons.length;j++) {%>
              <li><i class="<%= whatido[i].icons[j].icon %> fa-5x" style="color:<%= whatido[i].icons[j].color %>"></i></li>
            <% } %>
          </ul>

          <div class = "Data-Analytic">
            <% for(let j=0;j<whatido[i].para.length;j++) {%>
              <p class ="Features-paragraph">
                <%= whatido[i].para[j] %>
              </p>
              <% } %>
          </div>

        </div>
      
      <div class="col-lg-6 col-md-6 Feature-second-image ">
        <img class = "Feature-svg-image" src="/img/<%= whatido[i].image %>" alt="">
      </div>
    </div>

    <%} %>


  </section>


<%- include('_footer'); %>
